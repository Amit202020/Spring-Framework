<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	 <class name="com.Employee" table="EmpDB">
               <id name="empId" type="integer" column="empId" length="10">
                      <generator class="assigned"/>
               </id>
               <property name="empName" column="empName" type="string" length="10"/>
               <property name="empDesc" column="empDesc" type="string" length="10"/>
    </class>
</hibernate-mapping>